<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools" xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@drawable/basketball">
    <TextView android:layout_width="match_parent"
              android:layout_height="250dp"
              android:id="@+id/hobby"
              android:textColor="#000000"
              android:textSize="36sp"/>
    <AbsoluteLayout android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    tools:ignore="Deprecated">
        <TextView android:layout_width="wrap_content"
                  android:layout_height="wrap_content"
                  android:id="@+id/musictext"
                  android:textSize="25sp"
                  android:text="背景音乐"
                  android:layout_y="165dp"
                  android:layout_x="224dp"/>
        <com.suke.widget.SwitchButton
                android:id="@+id/switch_button"
                android:layout_x="328dp"
                android:layout_marginTop="10dp"
                app:sb_checked="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:layout_y="163dp"/>
        <Button android:layout_width="100dp"
                android:layout_height="66dp"
                android:layout_x="76dp"
                android:layout_y="230dp"
                android:text="篮球简介"
                android:textSize="20sp"
                android:background="@drawable/login_button_selector"
                android:id="@+id/introduction"/>
        <Button android:layout_width="100dp"
                android:layout_height="66dp"
                android:layout_y="230dp"
                android:layout_x="246dp"
                android:text="篮球巨星"
                android:textSize="20sp"
                android:background="@drawable/login_button_selector"
                android:id="@+id/person"/>
    </AbsoluteLayout>
</LinearLayout>